<% if meeting.errors.any? %>
  <div class='alert alert-danger'>
    <ul>
      <% meeting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: meeting, local: true do |f| %>
  <%= f.label :start_time, '予定日時' %>
  <div class='form-group'>
    <%= f.date_select :start_time %>
  </div>
  <div class='form-group'>
    <%= f.label :label, 'ラベル' %>
    <%= f.text_field :label, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= f.label :detail  %>
    <%= f.text_area :detail, class: 'form-control' %>
  </div>
  <div class='nav justify-content-end mt-3'>
    <%= f.submit '保存する', class: 'btn btn-primary' %>
  </div>
<% end %>