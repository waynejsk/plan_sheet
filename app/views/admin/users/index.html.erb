<h1>ユーザー一覧</h1>

<div>
  <table class='table'>
    <thead>
      <tr>
        <th>ユーザ名</th>
        <th>メールアドレス</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user_path(user) %></td>
          <td><%= user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
</div>